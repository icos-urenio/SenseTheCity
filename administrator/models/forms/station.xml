			name="description"
			type="textarea"
			label="COM_SENSETHECITY_SENSETHECITY_FIELD_DESCRIPTION_LABEL"
			description="COM_SENSETHECITY_SENSETHECITY_FIELD_DESCRIPTION_DESC"
			class="inputbox validate-description"
			filter="safehtml"
			buttons="false"
			hide="readmore,pagebreak,toggleeditor"
			required="true"
			default=""
			rows="5"
			cols="200"
		/>		
		
		<field
			name="userid"
			type="hidden"
		/>			
	</fieldset>
	
