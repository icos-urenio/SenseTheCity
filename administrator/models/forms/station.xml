			name="longitude"
			type="text"
			label="COM_SENSETHECITY_SENSETHECITY_FIELD_LONGITUDE_LABEL"
			description="COM_SENSETHECITY_SENSETHECITY_FIELD_LONGITUDE_DESC"
			size="40"
			class="inputbox validate-longitude"
			required="false"
			default=""
